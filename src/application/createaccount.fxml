<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.CreateController">
   
   <children>
      <HBox prefHeight="600.0" prefWidth="900.0">
         <children>
            
            <!-- Panel Gauche - Section Marque -->
            <VBox prefHeight="600.0" prefWidth="450.0" style="-fx-background-color: linear-gradient(to bottom right, #27ae60, #2ecc71);">
               <children>
                  <VBox alignment="CENTER" prefHeight="600.0" prefWidth="450.0" spacing="20.0">
                     <padding>
                        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                     </padding>
                     <children>
                        <Label text="Épicerie FreshMarket Pro" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="24.0" />
                           </font>
                        </Label>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Rejoignez notre réseau d'épiciers prospères" textAlignment="CENTER" wrappingWidth="300.0">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Text>
                     </children>
                  </VBox>
               </children>
            </VBox>
            
            <!-- Panel Droit - Formulaire d'Inscription -->
            <VBox prefHeight="600.0" prefWidth="450.0" style="-fx-background-color: #ffffff;">
               <children>
                  <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="450.0" spacing="20.0">
                     <padding>
                        <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
                     </padding>
                     <children>
                        
                        <!-- Section Titre -->
                        <VBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Créer votre compte" textFill="#2d3748">
                                 <font>
                                    <Font name="System Bold" size="28.0" />
                                 </font>
                              </Label>
                              <Label text="Inscrivez-vous pour commencer à gérer votre épicerie" textFill="#718096">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        
                        <!-- Formulaire d'Inscription -->
                        <VBox prefWidth="350.0" spacing="15.0">
                           <children>
                              
                              <!-- Champ Nom Complet -->
                              <VBox spacing="5.0">
                                 <children>
                                    <Label text="Nom complet" textFill="#4a5568">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Label>
                                    <TextField promptText="Entrez votre nom complet" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cbd5e0; -fx-padding: 10;" />
                                 </children>
                              </VBox>
                              
                              <!-- Champ Email -->
                              <VBox spacing="5.0">
                                 <children>
                                    <Label text="Adresse email" textFill="#4a5568">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Label>
                                    <TextField promptText="Entrez votre adresse email" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cbd5e0; -fx-padding: 10;" />
                                 </children>
                              </VBox>
                              
                              <!-- Champ Nom d'Utilisateur -->
                              <VBox spacing="5.0">
                                 <children>
                                    <Label text="Nom d'utilisateur" textFill="#4a5568">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Label>
                                    <TextField promptText="Choisissez un nom d'utilisateur" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cbd5e0; -fx-padding: 10;" />
                                 </children>
                              </VBox>
                              
                              <!-- Champ Mot de Passe -->
                              <VBox spacing="5.0">
                                 <children>
                                    <Label text="Mot de passe" textFill="#4a5568">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Label>
                                    <PasswordField promptText="Créez un mot de passe" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cbd5e0; -fx-padding: 10;" />
                                 </children>
                              </VBox>
                              
                              <!-- Champ Confirmation Mot de Passe -->
                              <VBox spacing="5.0">
                                 <children>
                                    <Label text="Confirmer le mot de passe" textFill="#4a5568">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Label>
                                    <PasswordField promptText="Confirmez votre mot de passe" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cbd5e0; -fx-padding: 10;" />
                                 </children>
                              </VBox>
                              
                              <!-- Champ Nom de l'Épicerie -->
                              <VBox spacing="5.0">
                                 <children>
                                    <Label text="Nom de l'épicerie" textFill="#4a5568">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Label>
                                    <TextField promptText="Entrez le nom de votre épicerie" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cbd5e0; -fx-padding: 10;" />
                                 </children>
                              </VBox>
                                        
                           </children>
                        </VBox>
                        
                        <!-- Bouton Créer Compte -->
                        <Button mnemonicParsing="false" prefHeight="45.0" prefWidth="350.0" style="-fx-background-color: #27ae60; -fx-background-radius: 5; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="CRÉER LE COMPTE" />
                        
                        <!-- Séparateur avec OU -->
                        <VBox alignment="CENTER" prefWidth="350.0" spacing="10.0">
                           <children>
                              <Separator prefWidth="350.0" />
                              <Label text="OU" textFill="#a0aec0">
                                 <font>
                                    <Font size="12.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        
                        <!-- Lien Connexion -->
                        <Hyperlink fx:id="loginHyperlink" onAction= "#handleLoginLink" style="-fx-border-color: transparent; -fx-padding: 0;" text="Déjà un compte ? Se connecter" textFill="#27ae60" />

                                  
                     </children>
                  </VBox>
               </children>
            </VBox>
            
         </children>
      </HBox>
   </children>
</AnchorPane>
